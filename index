<body>
  <div class="container">
    <h1>ðŸŽ® Meine Spieleliste</h1>
    <!-- Formular zum HinzufÃ¼gen -->
    <form class="add-game-form" id="addGameForm" autocomplete="off">
      <input type="text" id="gameName" placeholder="Spielname" required>
      <input type="url" id="gameLink" placeholder="Spiel-Link (https://...)" required>
      <button type="submit">Spiel hinzufÃ¼gen</button>
    </form>

    <!-- Spieleliste -->
    <div id="gameList" class="game-list"></div>
  </div>

  <script>
    // Beispiel-Spiele
    let games = [
      { name: "Fortnite", link: "https://www.fortnite.com/" },
      { name: "Minecraft", link: "https://www.minecraft.net/" },
      { name: "Among Us", link: "https://innersloth.com/gameAmongUs.php" }
    ];

    // Spiele aus LocalStorage laden
    if(localStorage.getItem('myGames')) {
      games = JSON.parse(localStorage.getItem('myGames'));
    }

    // Spiele anzeigen
    function renderGames() {
      const list = document.getElementById('gameList');
      list.innerHTML = '';
      games.forEach(game => {
        const card = document.createElement('div');
        card.className = 'game-card';
        card.innerHTML = `
          <h2>${game.name}</h2>
          <a href="${game.link}" target="_blank">Zum Spiel</a>
        `;
        list.appendChild(card);
      });
    }

    renderGames();

    // Neues Spiel hinzufÃ¼gen
    document.getElementById('addGameForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('gameName').value.trim();
      const link = document.getElementById('gameLink').value.trim();
      if(name && link) {
        games.push({ name, link });
        localStorage.setItem('myGames', JSON.stringify(games));
        renderGames();
        this.reset();
      }
    });
  </script>
</body>
